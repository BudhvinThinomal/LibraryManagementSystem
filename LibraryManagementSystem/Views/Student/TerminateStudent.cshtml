@model LibraryManagementSystem.Models.Entities.StudentModel

@{
    ViewData["Title"] = "Student Termination";
    var successMessage = TempData["successMessage"]?.ToString();
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]?.ToString()</h3>
<hr />


<h4 class="mt-1">Are you sure you want to terminate this student?</h4>
<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
    <br />
    <form asp-action="Terminate">
        <input type="hidden" asp-for="StudentID" />
        <a asp-action="Index" class="btn btn-info text-light" aria-label="GoBack">Go Back</a> |
        <input type="submit" value="Terminate" class="btn btn-danger" />
    </form>
</div>
